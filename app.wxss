/**app.wxss**/

.container {
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 0;
  box-sizing: border-box;
}

.footer {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 80rpx;
  margin: 0 auto;
  margin-top: -80rpx;
  text-align: center;
  background-color: wheat;
  border-top: 1rpx solid red;
}

.footer_icon_head {
  position: relative;
  width: 70rpx;
  margin-right: auto;
  margin-left: auto;
}

.footer_icon_image {
  width: 100%;
  height: 50rpx;
  float: left;
  margin-right: auto;
  margin-left: auto;
  margin-top: 5rpx;
}

.footer_icon_text {
  width: 100%;
  float: left;
  margin-right: auto;
  margin-left: auto;
  font-size: 18rpx;
}
